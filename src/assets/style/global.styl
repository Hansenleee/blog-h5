@import './variables.styl'

html {
  box-sizing: border-box;
  font-size: 28px;
}

* {
  box-sizing: inherit;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

  &:before,
  &:after {
    box-sizing: inherit;
  }
}

body {
  font-size: 28px;
  background: $dark-white;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 500;
}

p {
  margin: 0;
}

a {
  text-decoration: none;
}

img {
  max-width: 100%;
}

input,
textarea {
  font-family: inherit;
}

textarea {
  resize: vertical;
}

ul {
  padding: 0;
  margin: 0;
  list-style-type: none;
}

button {
  border: 0;
  outline: none;
}

.ellipsis, .ellipsis--2 {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

// -webkit-line-clamp不是标准样式，移动端会有兼容问题
// 不换行显示是尽量用ellipsis--1样式。
// --------------------------------------------------
.ellipsis--1 {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ellipsis--2 {
  -webkit-line-clamp: 2;
}
